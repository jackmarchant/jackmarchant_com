{
    "name": "jackmarchant/silverstripe",
    "description": "SilverStripe project for jackmarchant.com",
    "type": "silverstripe-project",
    "require": {
        "ext-gd": "*",
		"ext-mbstring": "*",
        "php": ">=7.2.0",
        "silverstripe/recipe-plugin": "^1",
        "silverstripe/recipe-cms": "1.1.0@stable",
        "sendgrid/sendgrid": "~5.0.9"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7"
    },
    "extra": {
        "expose": [
            "themes/silverstripe",
            "vendor/silverstripe"
        ],
        "project-files-installed": [
            ".env.example",
            ".htaccess",
            "assets/.gitignore",
            "assets/.htaccess",
            "assets/web.config",
            "favicon.ico",
            "index.php",
            "mysite/.htaccess",
            "mysite/_config.php",
            "mysite/_config/mysite.yml",
            "mysite/_config/theme.yml",
            "mysite/code/Page.php",
            "mysite/code/PageController.php",
            "web.config"
        ],
        "public-files-installed": [
            ".htaccess",
            "assets/.gitignore",
            "assets/.htaccess",
            "assets/web.config",
            "favicon.ico",
            "index.php",
            "web.config"
        ]
    },
    "config": {
        "process-timeout": 600,
        "platform": {
            "php": "7.2.0"
        }
    },
    "prefer-stable": true
}
